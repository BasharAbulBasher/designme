{% extends 'base.html.twig' %}

{% block title %}{{article.title}}{% endblock %}

{% block body %}
<style>
.article-getArticle .slider{
    height:500px;
    width:500px;
}
.article-getArticle .slider img{
    height:100%;
    width:100%;
}



</style>
<div class="article-getArticle">
    <div class="article row">
        <div class="slider col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-indicators">
                    {% for image in article.images %}
                    {% if loop.index == 1 %}
                    <button type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="{{ loop.index-1 }}" class="active" aria-current="true"
                        aria-label="{{'Slide ' ~ loop.index}}"></button>
                    {% else %}
                    <button type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide-to="{{ loop.index-1 }}" aria-current="true"
                        aria-label="{{'Slide ' ~ loop.index}}"></button>
                    {% endif %}

                    {% endfor %}
                </div>
                <div class="carousel-inner">
                    {% for image in article.images %}
                    {% if loop.index == 1 %}
                    <div class="carousel-item active">
                        <img src="{{ asset('/img/article/' ~ article.id ~ '/' ~ image.path) }}" class="d-block w-100"
                            alt="...">
                    </div>
                    {% else %}
                    <div class="carousel-item">
                        <img src="{{ asset('/img/article/' ~ article.id ~ '/' ~ image.path) }}" class="d-block w-100"
                            alt="...">
                    </div>
                    {% endif %}
                    {% endfor %}
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                    data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="description col-md-6">
            <h2 class="text-center">{{article.title}}</h2>
            <p>{{article.description}}</p>
        </div>
    </div>
</div>
{% endblock %}