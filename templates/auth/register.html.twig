{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}
<style>

</style>

<div class="auth-register d-flex justify-content-center">
    <form class="w-50 mt-3" method="post" action="{{ path('auth.registerTest') }}">
        <h3 class="text-danger">Register</h3>
        <div class="mb-3">
            <label  class="form-label">Email address</label>
            <input type="email" class="form-control"  placeholder="name@example.com" name="email" required>
        </div>
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <button type="submit" class="btn btn-danger w-100"> Register</button>
        {% if data.message is defined and data.message is not empty %}
            {% if data.success == true %}
                <div class="text-success">{{ data.message}}</div>
            {% else %}
                 <div class="text-danger">{{ data.message}}</div>
            {% endif %}
           
        {% endif %}
    </form>
</div>
{% endblock %}
