{% extends 'base.html.twig' %}

{% block title %}{{ category.title}}{% endblock %}

{% block body %}
<style> 
.category-getCategory .category-header img{
    width:100%;
    height:400px;
}
.category-getCategory .category-header .category-text{
    background-color:#dfe4e8;
    padding:50px;
}
.category-getCategory .article{
    width:300px;
    height:300px;
    border:2px solid black;
    padding:0px;
    overflow: hidden;
}
.category-getCategory .img img{
    width:300px;
    height:150px;
}

</style>
<div class="category-getCategory">
    <div class="category-header">
         <img src="{{ asset('/img/category/' ~ category.id  ~ '/' ~ category.images[0].path) }}">
        <div class="category-text">
            <h1>{{ category.title}}</h1>
            <p>{{category.description}}</p>
        </div>
    
    </div>
    <div class="content ps-3">
        <div class="articles row">
            {% for article in category.articles %}
                <div class="article col-md-4 ms-2 mt-2">
                <a href="/user/article/getArticle/{{article.id}}"> 
                    <div class="img">
                        <img src="{{ asset('/img/article/' ~ article.id  ~ '/' ~ article.images[0].path) }}">
                    </div>
                    <div class="title d-flex justify-content-center align-items-center">
                        <p class="text-primary">{{ article.title }}</p>
                    </div>
                </a>
                </div>

            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}