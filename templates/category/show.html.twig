{% extends 'admin.html.twig' %}

{% block title %}Show Category{% endblock %}

{% block body %}
<style>
    .category-show .category {
        border: 1px solid black;
    }
     .category-show .category .img img{
        width:100px;
        height:100px;
     }
</style>
<div class="category-show">
    <div class="container">
        <div class="row">
            {% for category in categories %}
            <div class="category col-md-4 p-2">
                <div class="img">
                    <img class="w-100" src="{{ asset('/img/category/' ~ category.id ~ '/' ~ category.images[0].path  ) }}"  />
                </div>
                <h5 class="text-center">{{category.title}}</h5>
                <a class="btn btn-info w-100" href="/admin/category/edit/{{category.id}}">Update</a>
                <a class="btn btn-danger w-100 mt-2">Delete</a>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}